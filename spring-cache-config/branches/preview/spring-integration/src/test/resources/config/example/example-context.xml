<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="distributedService" class="com.griddynamics.coherence.integration.spring.service.DistributedCacheServiceFactory" lazy-init="true" />
	
	<bean id="simpleDistributedCache" class="com.griddynamics.coherence.integration.spring.NamedCacheFactory" lazy-init="true">
		<property name="cacheDefinition" ref="simpleDistributed" />
	</bean>
		
	<bean id="simpleDistributed" class="com.griddynamics.coherence.integration.spring.ServiceCacheDefinition">
		<property name="cacheService" ref="distributedService" />
		<property name="mapListener">
			<bean class="com.griddynamics.coherence.integration.spring.example.PrintingListener" />
		</property>
		<property name="backingMapFactory" ref="rwBackingMap" />
	</bean>
		
	<bean id="cacheStore" class="com.tangosol.net.cache.MapCacheStore" scope="prototype">
		<constructor-arg>
			<bean class="java.util.HashMap">
				<constructor-arg>
					<map>
						<entry key="aaa" value="12323" />
						<entry key="bbb" value="asdsad" />
					</map>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="rwBackingMap" class="com.griddynamics.coherence.integration.spring.ReadWriteBackingMapDefinition">
		<property name="loader" ref="cacheStore" />
		<property name="internalMap">
			<bean class="com.griddynamics.coherence.integration.spring.LocalCacheFactory">
				<property name="highUnits" value="1000" />
				<property name="evictionType" value="HYBRID" />
				<property name="expiryDelayMillis" value="30000" />
				<property name="flushDelayMillis" value="60000" />
			</bean>
		</property>
	</bean>
	
	<bean id="simpleDistributedNearCache" class="com.griddynamics.coherence.integration.spring.NearCacheFactory" lazy-init="true">
		<property name="frontMap">
			<bean class="com.griddynamics.coherence.integration.spring.LocalCacheFactory">
				<property name="highUnits" value="10000" />
				<property name="evictionType" value="HYBRID" />
			</bean>
		</property>
		<property name="backingCacheDefinition" ref="simpleDistributed"/>
		<property name="invalidationStrategy" value="present" />
	</bean>
	
</beans>
