<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>

	<caching-scheme-mapping>
		<cache-mapping>
			<cache-name>vanila-*</cache-name>
			<scheme-name>store-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>simple-*</cache-name>
			<scheme-name>simple-store-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>load-all-*</cache-name>
			<scheme-name>load-all-store-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>write-behind-*</cache-name>
			<scheme-name>write-behind-store-scheme</scheme-name>
		</cache-mapping>
        <cache-mapping>
            <cache-name>xml-configurable-*</cache-name>
            <scheme-name>xml-configurable-store-scheme</scheme-name>
        </cache-mapping>
	</caching-scheme-mapping>

	<caching-schemes>

		<distributed-scheme>
			<scheme-name>store-scheme</scheme-name>
			<service-name>StoreScheme</service-name>
			<autostart>true</autostart>
			<partition-count>3</partition-count>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.test.rwbm.BinaryEntryExpiryLoader</class-name>
							<init-params>
								<init-param>
									<param-value>{manager-context}</param-value>
								</init-param>
							</init-params>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
		</distributed-scheme>

		<distributed-scheme>
			<scheme-name>simple-store-scheme</scheme-name>
			<service-name>StoreScheme</service-name>
			<autostart>true</autostart>
			<partition-count>3</partition-count>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.test.rwbm.SimpleCacheStore</class-name>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
		</distributed-scheme>

        <distributed-scheme>
            <scheme-name>load-all-store-scheme</scheme-name>
            <service-name>StoreScheme</service-name>
            <autostart>true</autostart>
            <partition-count>3</partition-count>
            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme />
                    </internal-cache-scheme>
                    <cachestore-scheme>
                        <class-scheme>
                            <class-name>org.gridkit.coherence.test.rwbm.LoadAllCacheStore</class-name>
                        </class-scheme>
                    </cachestore-scheme>
                </read-write-backing-map-scheme>
            </backing-map-scheme>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>xml-configurable-store-scheme</scheme-name>
            <service-name>StoreScheme</service-name>
            <autostart>true</autostart>
            <partition-count>3</partition-count>
            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme />
                    </internal-cache-scheme>
                    <cachestore-scheme>
                        <class-scheme>
                            <class-name>org.gridkit.coherence.test.rwbm.XmlConfigurableLoader</class-name>
                            <init-params>
                                <init-param>
                                    <param-name>paramA</param-name>
                                    <param-value>somevalue</param-value>
                                </init-param>
                            </init-params>
                        </class-scheme>
                    </cachestore-scheme>
                </read-write-backing-map-scheme>
            </backing-map-scheme>
        </distributed-scheme>

		<distributed-scheme>
			<scheme-name>write-behind-store-scheme</scheme-name>
			<service-name>StoreScheme</service-name>
			<autostart>true</autostart>
			<partition-count>3</partition-count>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
                    <write-delay>5s</write-delay>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.test.rwbm.SimpleCacheStore</class-name>
						</class-scheme>
					</cachestore-scheme>
                    <listener>
                        <class-scheme>
                            <!-- 
                            <class-name>org.gridkit.coherence.test.rwbm.DecoratorEventCheck$EntryTrigger</class-name>
                             -->
                            <class-name>org.gridkit.coherence.test.rwbm.DecoratorEventCheck$EntryListener</class-name>
                        </class-scheme>
                    </listener>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
		</distributed-scheme>

	</caching-schemes>

</cache-config>