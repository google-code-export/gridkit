<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.gridkit.coherence-tools</groupId>
        <artifactId>coherence-tools-parent</artifactId>
        <version>1.3</version>
    </parent>

    <artifactId>coherence-dataloss-listener</artifactId>
    <version>0.10.1-SNAPSHOT</version>
    <name>coherence-dataloss-listener</name>
    <description>Data loss detection utils for Oracle Coherence.</description>
    
    <properties>
        <coherence.version>3.7.1.3</coherence.version>
        <chtest.version>0.3-SNAPSHOT</chtest.version>
        <junit.version>4.10</junit.version>
        <slf4j.version>1.6.0</slf4j.version>
        <logback.version>0.9.21</logback.version>
    </properties>

    <scm>
        <connection>scm:svn:http://gridkit.googlecode.com/svn/coherence-tools/trunk/dataloss-listener</connection>
        <developerConnection>scm:svn:https://gridkit.googlecode.com/svn/coherence-tools/trunk/dataloss-listener</developerConnection>
        <url>http://gridkit.googlecode.com/svn/coherence-tools/trunk/dataloss-listener</url>
    </scm>

    <repositories>
        <!-- GridKit maven2 repository -->
        <repository>
            <id>gridkit-releases</id>
            <name>gridkit-repo.googlecode.com</name>
            <url>http://gridkit.googlecode.com/svn/repo/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <!-- 
        This is member only repository used by developers of this project
                to store proprietary artifact.
                Normally you would use your own repository to store such artefact
                and configure it in your maven setting.
                This repository is defined at POM for convience of team collaborating
                on gridkit project. 
            -->
            <id>gridkit-maven</id>
            <url>https://subversion.assembla.com/svn/gridkit-maven/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    
    <dependencies>
        <!-- Coherence -->
        <dependency>
            <groupId>com.oracle.coherence</groupId>
            <artifactId>coherence</artifactId>
            <version>${coherence.version}</version>
            <optional>true</optional>
        </dependency>
        
        <!-- SLF4J Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        
        <!-- Test dependencies -->
        <dependency>
            <groupId>org.gridkit.coherence-tools</groupId>
            <artifactId>chtest</artifactId>
            <version>${chtest.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>