<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>

	<caching-scheme-mapping>
		<cache-mapping>
			<cache-name>vanila-*</cache-name>
			<scheme-name>loader-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>miss-*</cache-name>
			<scheme-name>miss-loader-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>nt-*</cache-name>
			<scheme-name>nt-loader-scheme</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>nf-*</cache-name>
			<scheme-name>null-filter-loader-scheme</scheme-name>
		</cache-mapping>
	</caching-scheme-mapping>

	<caching-schemes>

		<distributed-scheme>
			<scheme-name>loader-scheme</scheme-name>
			<service-name>LoaderScheme</service-name>
			<autostart>true</autostart>
			<partition-count>15</partition-count>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.util.vicluster.CacheLoaderCheck$OddLoader</class-name>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
		</distributed-scheme>

		<distributed-scheme>
			<scheme-name>miss-loader-scheme</scheme-name>
			<service-name>LoaderScheme</service-name>
			<autostart>true</autostart>
			<partition-count>15</partition-count>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<miss-cache-scheme>
						<local-scheme/>
					</miss-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.util.vicluster.CacheLoaderCheck$OddLoader</class-name>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
		</distributed-scheme>

		<distributed-scheme>
			<scheme-name>nt-loader-scheme</scheme-name>
			<service-name>LoaderScheme</service-name>
			<autostart>true</autostart>
			<partition-count>15</partition-count>
			<serializer>pof</serializer>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<miss-cache-scheme>
						<local-scheme/>
					</miss-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.util.vicluster.CacheLoaderCheck$OddLoader</class-name>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
			<listener>
				<class-scheme>
					<class-factory-name>org.gridkit.coherence.util.vicluster.CacheLoaderCheck$NullRemovingTrigger</class-factory-name>
					<method-name>create</method-name>
				</class-scheme>
			</listener>
		</distributed-scheme>

		<distributed-scheme>
			<serializer>pof</serializer>
			<scheme-name>null-filter-loader-scheme</scheme-name>
			<service-name>LoaderScheme</service-name>
			<autostart>true</autostart>
			<partition-count>15</partition-count>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme>
							<class-name>org.gridkit.coherence.util.vicluster.CacheLoaderCheck$NullRemovingLocalCache</class-name>
						</local-scheme>
					</internal-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>org.gridkit.coherence.util.vicluster.CacheLoaderCheck$OddLoader</class-name>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
		</distributed-scheme>

	</caching-schemes>

</cache-config>