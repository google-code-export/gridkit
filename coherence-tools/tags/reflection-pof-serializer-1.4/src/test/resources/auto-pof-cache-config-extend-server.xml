<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>
    <caching-scheme-mapping>

        <cache-mapping>
            <cache-name>objects*</cache-name>
            <scheme-name>simple-distributed-scheme</scheme-name>
        </cache-mapping>
        
        <cache-mapping><cache-name>AUTO_POF_MAPPING</cache-name><scheme-name>AUTO_POF_SCHEME</scheme-name></cache-mapping>

    </caching-scheme-mapping>

    <caching-schemes>
        
        <distributed-scheme>
            <scheme-name>simple-distributed-scheme</scheme-name>
            <serializer>
  				<class-name>org.gridkit.coherence.utils.pof.AutoPofSerializer</class-name>
			</serializer>
            <backing-map-scheme>
                <local-scheme />
            </backing-map-scheme>
            <backup-count>0</backup-count>
            <autostart>true</autostart>
            <local-storage>true</local-storage>
        </distributed-scheme>
        
        <!-- THIS ENTRY IS REQUIRED FOR AUTO POF SERIALIZER OVER EXTEND -->        
		<replicated-scheme>
			<scheme-name>AUTO_POF_SCHEME</scheme-name>
			<service-name>AUTO_POF_SERVICE</service-name>
			<backing-map-scheme><local-scheme/></backing-map-scheme>
		</replicated-scheme>

        <!-- Proxy service could be shared between auto POF serializer and application -->                
        <proxy-scheme>
            <scheme-name>cache-proxy</scheme-name>
            <service-name>TcpProxyService</service-name>

            <acceptor-config>
                <tcp-acceptor>
                    <local-address>
                        <address>localhost</address>
                        <port system-property="extend.port">9099</port>
                    </local-address>
                </tcp-acceptor>
	            <serializer>
	  				<class-name>org.gridkit.coherence.utils.pof.AutoPofSerializer</class-name>
				</serializer>
            </acceptor-config>
            <proxy-config>
    			<cache-service-proxy>
      				<lock-enabled>false</lock-enabled>
    			</cache-service-proxy>
  			</proxy-config>            
        </proxy-scheme>        

    </caching-schemes>

</cache-config>