<?xml version="1.0"?>
<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>*</cache-name>
            <scheme-name>remote-cache-scheme</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>
    
    <caching-schemes>
        <remote-invocation-scheme>
            <scheme-name>remote-invocation-scheme</scheme-name>
            <service-name>ExtendInvocation</service-name>
            
            <initiator-config>
                <tcp-initiator>
                    <remote-addresses>
                        <socket-address>
                            <address>127.0.01</address>
                            <port>33000</port>
                        </socket-address>
                        <socket-address>
                            <address>127.0.01</address>
                            <port>22000</port>
                        </socket-address>
                    </remote-addresses>
                </tcp-initiator>
                <outgoing-message-handler>
                    <request-timeout>30s</request-timeout>
                </outgoing-message-handler>                                    
            </initiator-config>
        </remote-invocation-scheme>
        
        <remote-cache-scheme>
            <scheme-name>remote-cache-scheme</scheme-name>
            <service-name>ExtendCacheService</service-name>
            
            <initiator-config>
                <tcp-initiator>
                    <remote-addresses>
                        <socket-address>
                            <address>127.0.01</address>
                            <port>33000</port>
                        </socket-address>
                        <socket-address>
                            <address>127.0.01</address>
                            <port>22000</port>
                        </socket-address>
                    </remote-addresses>
                </tcp-initiator>
                <outgoing-message-handler>
                    <request-timeout>30s</request-timeout>
                </outgoing-message-handler>                    
            </initiator-config>
        </remote-cache-scheme>
    </caching-schemes>

</cache-config>